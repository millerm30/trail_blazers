---
import MainLayout from "../layout/MainLayout.astro";
const title = "Plate Cove - Naked Man Beach Trail";
import "../styles/styles.css";
import RedBeachTrailImage from "../assets/red_beach/redBeach.png"
import TrailComponent from "../components/TrailComponent";
---

<MainLayout title={title}>
  <main>
    <h2 class="text-center pt-6 text-2xl text-black">Red Beach Trail Information!</h2>
    <TrailComponent 
      trailImage={RedBeachTrailImage} 
      trailName={"Red Beach Hiking Trail"} 
      trailDescription={"This trail is great for bird watching and hiking, and it's unlikely you'll encounter many other people while exploring. Dogs are welcome, but must be on a leash at all times."} 
      trailLength={"2.4 km"} 
      trailLocation={"Location of trail here"} 
      client:load 
    />
  </main>
</MainLayout>