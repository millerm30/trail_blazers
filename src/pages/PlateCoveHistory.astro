---
import MainLayout from "../layout/MainLayout.astro";
import "../styles/styles.css";
import heroImage from "../assets/hero_images/view2.jpg";
import PlateCoveArticleOne from "@components/PlateCoveArticle.astro";
import PlateCoveHistoryModals from "@components/PlateCoveHistoryModals.astro";
import { sortImagesByNumber } from "@utils/ImageFunctions";

const title = "Plate Cove - History";
const images = await Astro.glob("../assets/history/platecoveHistory*.*").then(
  (file) => {
    return file.map((file) => file.default.src);
  }
);

const sortedImages = sortImagesByNumber(images);
---

<MainLayout title={title} backgroundImage={heroImage.src}>
  <main>
    <section
      class="bg-white mt-10 p-4 border-t-[1px] border-b-[1px] border-gray-300 text-black"
    >
      <h2 class="text-xl font-semibold mb-2">Plate Cove History</h2>
      <PlateCoveArticleOne />
      <br />
      <p class="italic text-sm">Click the images below to show more info</p>
      <div
        class="grid grid-cols-3 md:grid-cols-5 lg:grid-cols-8 xl:grid-cols-10 gap-2 auto-rows-[140px]"
      >
        {
          sortedImages.map((image, index) => {
            return (
              <label
                for={`modal-${index + 1}`}
                class="hover:cursor-pointer hover:animate-pulse"
              >
                <img
                  src={image}
                  alt={`Plate Cove History ${index + 1}`}
                  class="rounded-lg h-full w-full"
                />
              </label>
            );
          })
        }
      </div>
    </section>
    <PlateCoveHistoryModals />
  </main>
</MainLayout>
