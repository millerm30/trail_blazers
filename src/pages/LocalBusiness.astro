        businessPhone={"709-429-0270"} 
        businessEmail={"adam@outportacres.com"} 
        businessWebsite={"https://www.outportacres.com"}
        businessWebName={"www.outportacres.com"}
      >
        <Amenities slot="before_social" activity={"Agriculture"} />
        <SocialIcon socialHref={"https://www.facebook.com/OutportAcres"} socialName={"brandico:facebook-rect"} />
      </BusinessCard>
      <BusinessCard 
        businessImage={SomethingFishyImage}
        businessName={"Somethin' Fishy NL"}
        businessDescription={"Family owned and operated by Furlong Foods of Plate Cove!"}
        businessAddress={"73 Top Road, Plate Cove West, NL"} 
        businessPhone={"709-545-2251"} 
        businessEmail={"furlongs@nf.sympatico.ca"} 
        businessWebsite={"https://www.furlongfoods.ca"}
        businessWebName={"www.furlongfoods.ca"}
