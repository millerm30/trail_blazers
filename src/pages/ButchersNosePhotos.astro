---
import MainLayout from "../layout/MainLayout.astro";
const title = "Plate Cove - Butcher's Nose Photos";
import "../styles/styles.css";
import heroImage from "../assets/hero_images/view8.jpeg";
import imageOne from "../assets/butchers_nose/image.jpeg";
import imageTwo from "../assets/butchers_nose/image1.jpeg";
import imageThree from "../assets/butchers_nose/image2.jpeg";
import imageFour from "../assets/butchers_nose/image3.jpeg";
import imageFive from "../assets/butchers_nose/image4.jpeg";
import imageSix from "../assets/butchers_nose/image5.jpeg";
import imageSeven from "../assets/butchers_nose/image6.jpeg";
import imageEight from "../assets/butchers_nose/image7.jpeg";
import imageNine from "../assets/butchers_nose/image8.jpeg";
import imageTen from "../assets/butchers_nose/image9.jpeg";
import imageEleven from "../assets/butchers_nose/image10.jpeg";
import imageTwelve from "../assets/butchers_nose/image11.jpeg";
import ButchersNosePhotosModal from "../components/ButchersNosePhotosModals.astro";
---

<MainLayout title={title} backgroundImage={heroImage}>
  <main>
    <section class="bg-white my-6 p-4 rounded-lg border-[1px] border-gray-300 mx-4 text-black">
      <h2 class="text-xl font-semibold mb-2">Butcher's Nose Photos</h2>
      <br>
      <p class="italic">Click the images below to show more info</p>
      <div class="grid grid-cols-3 md:grid-cols-5 lg:grid-cols-8 gap-2 auto-rows-[140px]">
        <label for="modal-1" class="hover:cursor-pointer hover:animate-pulse"><img src={imageOne} alt="Butcher's Nose 1" class="rounded-lg h-full w-full" /></label>
        <label for="modal-2" class="hover:cursor-pointer hover:animate-pulse"><img src={imageTwo} alt="Butcher's Nose 2" class="rounded-lg h-full w-full" /></label>
        <label for="modal-3" class="hover:cursor-pointer hover:animate-pulse"><img src={imageThree} alt="Butcher's Nose 3" class="rounded-lg h-full w-full" /></label>
        <label for="modal-4" class="hover:cursor-pointer hover:animate-pulse"><img src={imageFour} alt="Butcher's Nose 4" class="rounded-lg h-full w-full" /></label>
        <label for="modal-5" class="hover:cursor-pointer hover:animate-pulse"><img src={imageFive} alt="Butcher's Nose 5" class="rounded-lg h-full w-full" /></label>
        <label for="modal-6" class="hover:cursor-pointer hover:animate-pulse"><img src={imageSix} alt="Butcher's Nose 6" class="rounded-lg h-full w-full" /></label>
        <label for="modal-7" class="hover:cursor-pointer hover:animate-pulse"><img src={imageSeven} alt="Butcher's Nose 7" class="rounded-lg h-full w-full" /></label>
        <label for="modal-8" class="hover:cursor-pointer hover:animate-pulse"><img src={imageEight} alt="Butcher's Nose 8" class="rounded-lg h-full w-full" /></label>
        <label for="modal-9" class="hover:cursor-pointer hover:animate-pulse"><img src={imageNine} alt="Butcher's Nose 9" class="rounded-lg h-full w-full" /></label>
        <label for="modal-10" class="hover:cursor-pointer hover:animate-pulse"><img src={imageTen} alt="Butcher's Nose 10" class="rounded-lg h-full w-full" /></label>
        <label for="modal-11" class="hover:cursor-pointer hover:animate-pulse"><img src={imageEleven} alt="Butcher's Nose 11" class="rounded-lg h-full w-full" /></label>
        <label for="modal-12" class="hover:cursor-pointer hover:animate-pulse"><img src={imageTwelve} alt="Butcher's Nose 12" class="rounded-lg h-full w-full" /></label>
      </div>
    </section>
    <ButchersNosePhotosModal />
  </main>
</MainLayout>