---
import Modal from "../components/Modal.astro";
const images = await Astro.glob("../assets/history/platecoveHistory*.*").then(file => {
  return file.map(file => file.default)
})
const sortedImages = images.sort((a, b) => {
  const aNum = a.match(/\d+/)[0];
  const bNum = b.match(/\d+/)[0];
  return aNum - bNum;
});
const [
  plateCoveHistoryOne,
  plateCoveHistoryTwo,
  plateCoveHistoryThree,
  plateCoveHistoryFour,
  plateCoveHistoryFive,
  plateCoveHistorySix,
  plateCoveHistorySeven,
  plateCoveHistoryEight,
  plateCoveHistoryNine,
  plateCoveHistoryTen,
  plateCoveHistoryEleven,
  plateCoveHistoryTwelve,
  plateCoveHistoryThirteen,
  plateCoveHistoryNineteen,
  plateCoveHistoryTwenty,
] = sortedImages;
---

<Modal 
  modalId={"modal-1"} 
  headingText={"Sawmill"} 
  paragraphText={"Keough family mill towards the point located in Plate Cove West. Dated - 1984"} 
  imgSource={plateCoveHistoryOne} 
  imgAlt={"Resident Image 1"} 
/>
