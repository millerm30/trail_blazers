---
import Modal from "../components/Modal.astro";
const images = await Astro.glob("../assets/jigginhead_trail/photo*.*").then(file => {
  return file.map(file => file.default)
})
const sortedImages = images.sort((a, b) => {
  const aNum = a.match(/\d+/)[0];
  const bNum = b.match(/\d+/)[0];
  return aNum - bNum;
});
const [
  imageOne,
  imageTwo,
  imageThree,
  imageFour,
  imageFive,
  imageSix,
  imageSeven,
  imageEight,
  imageNine,
  imageTen,
  imageEleven,
  imageTwelve,
  imageThirteen,
  imageFourteen,
  imageFifteen
] = sortedImages;
---

<Modal 
  modalId={"modal-1"} 
  headingText={"Rules"} 
  paragraphText={"Trail sign with rules to start your hike. Dated - 2022"} 
  imgSource={imageOne} 
  imgAlt={"Trail sign with rules to start your hike."}
/>
<Modal 
  modalId={"modal-2"} 
