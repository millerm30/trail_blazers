---
const { headingText, paragraphText, photoName, imgSource, imgAlt, modalId } = Astro.props;
---

<input type="checkbox" id={modalId} class="modal-toggle" />
<div class="modal">
  <div class="modal-box relative max-w-xl">
    <label for={modalId} class="btn btn-sm btn-circle bg-[#023047] absolute right-2 top-2 border-none hover:bg-[#FB8500]">âœ•</label>
    <h3 class="text-lg font-bold">{headingText}</h3>
    <p class="py-2 italic">{paragraphText}</p>
    <p class="py-2 italic">{photoName}</p>
    <img class="w-full max-h-[400px] object-scale-down" src={imgSource} alt={imgAlt} />
  </div>
</div>