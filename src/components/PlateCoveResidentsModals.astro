---
import Modal from "../components/Modal.astro";
const images = await Astro.glob("../assets/history/resident*.*").then((file => {
  return file.map(file => file.default);
}));
const [
  plateCoveHistoryOne,
  plateCoveHistoryTwo,
  plateCoveHistoryThree, 
  plateCoveHistoryFour, 
  plateCoveHistoryFive, 
  plateCoveHistorySix, 
  plateCoveHistorySeven, 
  plateCoveHistoryEight
  ] = images;
---

<Modal 
  modalId={"modal-1"} 
  headingText={"History"} 
  paragraphText={"Mary (Philpott) Hyde, Mary (Heaney) Keough and Mary (Whalen) Keough. Plate Cove West."} 
  imgSource={plateCoveHistoryOne} 
  imgAlt={"History Image 1"}
/>
