---
import Modal from "../components/Modal.astro";
import { plateCodeResidentsPhotosModalImageTexts } from "../components/ImageTexts";
import { sortImagesByNumber } from "../utils/ImageFunctions";

const headText = "Residents of Plate Cove";
const images = await Astro.glob("../assets/history/resident*.*").then(
  (file) => {
    return file.map((file) => file.default.src);
  }
);

const sortedImages = sortImagesByNumber(images);
---

{
  sortedImages.map((image, index) => (
    <Modal
      modalId={`modal-${index + 1}`}
      headingText={headText}
      paragraphText={plateCodeResidentsPhotosModalImageTexts[index]}
      imgSource={image}
      imgAlt={`Image of Plate Cove Residents ${index + 1}`}
    />
  ))
}
