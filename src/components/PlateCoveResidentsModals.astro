---
import Modal from "../components/Modal.astro";
const headText = "Residents of Plate Cove";
const images = await Astro.glob("../assets/history/resident*.*").then((file => {
  return file.map(file => file.default);
}));
const sortedImages = images.sort((a, b) => {
  const aNum = a.match(/\d+/)[0];
  const bNum = b.match(/\d+/)[0];
  return aNum - bNum;
});
const [
  plateCoveHistoryOne,
  plateCoveHistoryTwo,
  plateCoveHistoryThree, 
  plateCoveHistoryFour, 
  plateCoveHistoryFive, 
  plateCoveHistorySix, 
  plateCoveHistorySeven, 
  plateCoveHistoryEight,
  plateCoveHistoryNine,
  plateCoveHistoryTen,
  plateCoveHistoryEleven,
  plateCoveHistoryTwelve,
  plateCoveHistoryThirteen,
  plateCoveHistoryFourteen,
  plateCoveHistoryFifteen,
  plateCoveHistorySixteen,
  plateCoveHistorySeventeen,
  plateCoveHistoryEighteen,
  plateCoveHistoryNineteen,
  plateCoveHistoryTwenty,
  plateCoveHistoryTwentyOne,
  plateCoveHistoryTwentyTwo,
  plateCoveHistoryTwentyThree,
  ] = sortedImages;
