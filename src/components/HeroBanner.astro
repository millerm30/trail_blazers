---
import imageOne from "../assets/hero_images/view1.png";
import imageTwo from "../assets/hero_images/view2.jpg";
import imageThree from "../assets/hero_images/view3.png";
import imageFour from "../assets/hero_images/view4.jpg";
import imageFive from "../assets/hero_images/view5.jpg";
import imageSix from "../assets/hero_images/view6.jpg";

const rotateImages = () => {
	const images = [
		imageOne,
		imageTwo,
		imageThree,
		imageFour,
		imageFive,
		imageSix,
];
	const randomImage = images[Math.floor(Math.random() * images.length)];
	return randomImage;
};
const background = rotateImages();
---

<section class="flex flex-col justify-center items-center h-full relative" id="heroImage">
	<img src={background} alt="Hero Image" class="w-full h-72 opacity-80 object-cover object-center" />
</section>