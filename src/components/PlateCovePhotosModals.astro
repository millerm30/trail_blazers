---
import Modal from "../components/Modal.astro";
import { plateCovePhotosModalImageTexts } from "../components/ImageTexts";
import { sortImagesByNumber } from "../utils/ImageFunctions";

const headText = "Photos of Plate Cove";
const images = await Astro.glob("../assets/plate_cove/plate_cove*.*").then(
  (file) => {
    return file.map((file) => file.default.src);
  }
);

const sortedImages = sortImagesByNumber(images);
---

{
  sortedImages.map((image, index) => (
    <Modal
      modalId={`modal-${index + 1}`}
      headingText={headText}
      paragraphText={plateCovePhotosModalImageTexts[index]}
      imgSource={image}
      imgAlt={`Plate Cove Image ${index + 1}`}
    />
  ))
};
