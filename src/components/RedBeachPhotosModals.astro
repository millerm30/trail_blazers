---
import Modal from "../components/Modal.astro";
import { redBeachPhotosModalImageTexts } from "../components/ImageTexts";

const headText = "Red Beach Photo";
const images = await Astro.glob("../assets/red_beach/red_beach*.*").then(
  (file) => {
    return file.map((file) => file.default.src);
  }
);
const sortedImages = images.sort((a, b) => {
  const aNum = a.match(/\d+/)[0];
  const bNum = b.match(/\d+/)[0];
  return aNum - bNum;
});
---

{
  sortedImages.map((image, index) => (
    <Modal
      modalId={`modal-${index + 1}`}
      headingText={headText}
      paragraphText={redBeachPhotosModalImageTexts[index]}
      imgSource={image}
      imgAlt={`Image of Red Beach ${index + 1}`}
    />
  ))
};
