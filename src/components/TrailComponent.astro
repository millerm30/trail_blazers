---
import { Image } from "astro:assets";

const { trailImage, altImage, trailName, trailLength, trailLocation } =
  Astro.props;
---

<section
  class="flex justify-center gap-6 flex-col mt-10 md:flex-row lg:flex-row p-2 text-black"
>
  <div>
    <Image
      src={trailImage}
      alt={altImage}
      class="max-w-xs sm:max-w-sm md:max-w-sm lg:max-w-xl mx-auto rounded-lg shadow-md shadow-gray-400"
    />
  </div>
  <div
    class="mx-auto md:mx-0 lg:mx-0 bg-white p-6 rounded-lg border-[1px] border-gray-300 max-w-lg shadow-md shadow-gray-400"
  >
    <h2 class="text-2xl md:text-2xl lg:text-3xl font-bold mb-2">{trailName}</h2>
    <slot name="after-trailname" />
    <p class="my-2"><span class="font-bold">Length: </span>{trailLength}</p>
    <div class="my-2">
      <p class="font-bold">Location:</p>
      <p class="text-sm">{trailLocation}</p>
    </div>
    <div class="flex flex-wrap gap-2">
      <slot name="after-traillocation" />
    </div>
  </div>
</section>
