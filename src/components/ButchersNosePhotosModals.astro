---
import Modal from "../components/Modal.astro";
import imageOne from "../assets/butchers_nose/image.jpeg";
import imageTwo from "../assets/butchers_nose/image1.jpeg";
import imageThree from "../assets/butchers_nose/image2.jpeg";
import imageFour from "../assets/butchers_nose/image3.jpeg";
import imageFive from "../assets/butchers_nose/image4.jpeg";
import imageSix from "../assets/butchers_nose/image5.jpeg";
import imageSeven from "../assets/butchers_nose/image6.jpeg";
import imageEight from "../assets/butchers_nose/image7.jpeg";
import imageNine from "../assets/butchers_nose/image8.jpeg";
import imageTen from "../assets/butchers_nose/image9.jpeg";
import imageEleven from "../assets/butchers_nose/image10.jpeg";
import imageTwelve from "../assets/butchers_nose/image11.jpeg";
---

<Modal 
  modalId={"modal-1"} 
  headingText={"Singnage"} 
  paragraphText={"Hiking trail sign."} 
  imgSource={imageOne} 
  imgAlt={"Image of a hiking trail sign."}
/>
<Modal 
  modalId={"modal-2"} 
  headingText={"Lookout"} 
  paragraphText={"Top of Butcher's Nose overlooking Bald Rock Point with Plate Cove West in the background."} 
  imgSource={imageTwo} 
  imgAlt={"Image of a lookout point."}
/>
<Modal 
  modalId={"modal-3"} 
  headingText={"Views"} 
  paragraphText={"Viewing Plate Cove East from the top."} 
  imgSource={imageThree} 
  imgAlt={"Image of a view from the top of Butcher's Nose."}
/>
<Modal 
  modalId={"modal-4"} 
  headingText={"Across the bay"} 
  paragraphText={"Looking across the cove into Bonavista Bay."} 
  imgSource={imageFour} 
  imgAlt={"Image of a view across the bay."}
/>
<Modal 
  modalId={"modal-5"} 
  headingText={"Looking back"} 
  paragraphText={"Looking to PLate Cove West from the top."} 
  imgSource={imageFive} 
  imgAlt={"Image of a view looking back to Plate Cove West."}
/>
<Modal 
  modalId={"modal-6"} 
  headingText={"Directional Signage"} 
  paragraphText={"Direction sign on trail."} 
  imgSource={imageSix} 
  imgAlt={"Image of a directional sign on the trail."}
/>
<Modal 
  modalId={"modal-7"} 
  headingText={"Trail Sign"} 
  paragraphText={"Trail sign showing to start incline on trail."} 
  imgSource={imageSeven} 
  imgAlt={"Image of a trail sign showing the start of the incline."}
/>
<Modal 
  modalId={"modal-8"} 
  headingText={"Arial View"} 
  paragraphText={"Arial view of Bald Rock Point and Plate Cove West in background."} 
  imgSource={imageEight} 
  imgAlt={"Image of arial view of Bald Rock Point and Plate Cove West in background."}
/>
<Modal 
  modalId={"modal-9"} 
  headingText={"Hiking"} 
  paragraphText={"Hiking with your pet on a leash to enjoy the views."} 
  imgSource={imageNine} 
  imgAlt={"Image of a hiker with their pet on a leash."}
/>
<Modal 
  modalId={"modal-10"} 
  headingText={"Picnic Area"} 
  paragraphText={"Enjoy a break while hiking (Pack it in, Please pack it out!)."} 
  imgSource={imageTen} 
  imgAlt={"Image of a picnic area on the trail."}
/>
<Modal 
  modalId={"modal-11"} 
  headingText={"Artwork"} 
  paragraphText={"Painted rock with words of encouragement."} 
  imgSource={imageEleven} 
  imgAlt={"Image of a painted rock with words of encouragement."}
/>
<Modal 
  modalId={"modal-12"} 
  headingText={"Views"} 
  paragraphText={"View over the western side of the cove."} 
  imgSource={imageTwelve} 
  imgAlt={"Image of a view over the western side of the cove."}
/>
