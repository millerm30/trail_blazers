---
import Modal from "../components/Modal.astro";
const headText = "Butcher's Nose Trail";
const images = await Astro.glob("../assets/butchers_nose/butchers_nose*.*").then(file => {
  return file.map(file => file.default)
})
const sortedImages = images.sort((a, b) => {
  const aNum = a.match(/\d+/)[0];
  const bNum = b.match(/\d+/)[0];
  return aNum - bNum;
});
const [
  imageOne, 
  imageTwo,
  imageThree,
  imageFour,
  imageFive,
  imageSix,
  imageSeven,
  imageEight,
  imageNine,
  imageTen,
  imageEleven,
  imageTwelve
] = sortedImages;
---

<Modal 
  modalId={"modal-1"} 
  headingText={headText} 
  paragraphText={"Hiking trail sign. Dated - 2021"} 
  imgSource={imageOne} 
  imgAlt={"Image of a hiking trail sign."}
/>
<Modal 
  modalId={"modal-2"} 
  headingText={headText} 
  paragraphText={"Top of Butcher's Nose overlooking Bald Rock Point with Plate Cove West in the background. Dated - 2021"} 
  imgSource={imageTwo} 
  imgAlt={"Image of a lookout point."}
/>
<Modal 
  modalId={"modal-3"} 
  headingText={headText} 
  paragraphText={"Viewing Plate Cove East from the top. Dated - 2021"} 
  imgSource={imageThree} 
  imgAlt={"Image of a view from the top of Butcher's Nose."}
/>
<Modal 
  modalId={"modal-4"} 
  headingText={headText} 
  paragraphText={"Looking across the cove into Bonavista Bay. Dated - 2021"} 
  imgSource={imageFour} 
  imgAlt={"Image of a view across the bay."}
/>
<Modal 
  modalId={"modal-5"} 
  headingText={headText} 
  paragraphText={"Looking to Plate Cove West from the top. Dated - 2021"} 
  imgSource={imageFive} 
  imgAlt={"Image of a view looking back to Plate Cove West."}
/>
<Modal 
  modalId={"modal-6"} 
  headingText={headText} 
  paragraphText={"Direction sign on trail. Dated - 2021"} 
  imgSource={imageSix} 
  imgAlt={"Image of a directional sign on the trail."}
/>
<Modal 
  modalId={"modal-7"} 
  headingText={headText} 
  paragraphText={"Trail sign showing the start of incline on trail. Dated - 2021"} 
  imgSource={imageSeven} 
  imgAlt={"Image of a trail sign showing the start of the incline."}
/>
<Modal 
  modalId={"modal-8"} 
  headingText={headText} 
  paragraphText={"Arial view of Bald Rock Point and Plate Cove West in background. Dated - 2021"} 
  imgSource={imageEight} 
  imgAlt={"Image of arial view of Bald Rock Point and Plate Cove West in background."}
/>
<Modal 
  modalId={"modal-9"} 
  headingText={headText} 
  paragraphText={"Hiking with your pet on a leash to enjoy the views. Dated - 2021"} 
  imgSource={imageNine} 
  imgAlt={"Image of a hiker with their pet on a leash."}
/>
<Modal 
  modalId={"modal-10"} 
  headingText={headText} 
  paragraphText={"Enjoy a break while hiking (Pack it in, Please pack it out!). Dated - 2021"} 
  imgSource={imageTen} 
  imgAlt={"Image of a picnic area on the trail."}
/>
<Modal 
  modalId={"modal-11"} 
  headingText={headText} 
  paragraphText={"Painted rock with words of encouragement. Dated - 2021"} 
  imgSource={imageEleven} 
  imgAlt={"Image of a painted rock with words of encouragement."}
/>
<Modal 
  modalId={"modal-12"} 
  headingText={headText} 
  paragraphText={"View over the western side of the cove. Dated - 2021"} 
  imgSource={imageTwelve} 
  imgAlt={"Image of a view over the western side of the cove."}
/>
