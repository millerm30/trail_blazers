---
import Modal from "@components/Modal.astro";
import { jigginHeadPhotosModalImageTexts } from "@components/ImageTexts";
import { sortImagesByNumber } from "@utils/ImageFunctions";

const headText = "Jiggin' Head Trail";
const images = await Astro.glob(
  "../assets/jigginhead_trail/jiggin_head*.*"
).then((file) => {
  return file.map((file) => file.default.src);
});

const sortedImages = sortImagesByNumber(images);
---

{
  sortedImages.map((image, index) => (
    <Modal
      modalId={`modal-${index + 1}`}
      headingText={headText}
      paragraphText={jigginHeadPhotosModalImageTexts[index]}
      imgSource={image}
      imgAlt={`Image of Jiggin' Head Trail ${index + 1}`}
    />
  ))
}
