---
import Modal from "@components/Modal.astro";
import { plateCoveHistoryPhotosModalImageTexts } from "@components/ImageTexts";
import { sortImagesByNumber } from "@utils/ImageFunctions";

const headText = "Plate Cove History";
const images = await Astro.glob("../assets/history/platecoveHistory*.*").then(
  (file) => {
    return file.map((file) => file.default.src);
  }
);

const sortedImages = sortImagesByNumber(images);
---

{
  sortedImages.map((image, index) => (
    <Modal
      modalId={`modal-${index + 1}`}
      headingText={headText}
      paragraphText={plateCoveHistoryPhotosModalImageTexts[index]}
      imgSource={image}
      imgAlt={`Image of Plate Cove History ${index + 1}`}
    />
  ))
}
