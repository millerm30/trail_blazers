---
import Modal from "@components/Modal.astro";
import { nakedManPhotosModalImageTexts } from "@components/ImageTexts";
import { sortImagesByNumber } from "@utils/ImageFunctions";

const headText = "Naked Man Beach Photo";
const images = await Astro.glob(
  "../assets/nakedman_beach/nakedman_beach*.*"
).then((file) => {
  return file.map((file) => file.default.src);
});

const sortedImages = sortImagesByNumber(images);
---

{
  sortedImages.map((image, index) => (
    <Modal
      modalId={`modal-${index + 1}`}
      headingText={headText}
      paragraphText={nakedManPhotosModalImageTexts[index]}
      imgSource={image}
      imgAlt={`Naked Man Beach Photo ${index + 1}`}
    />
  ))
};
